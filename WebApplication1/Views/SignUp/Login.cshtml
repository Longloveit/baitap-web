@model WebApplication1.Models.LoginViewModel

@{
    ViewData["Title"] = "Log in to Exclusive";
    // Cờ này sẽ ẩn Icons, Service Guarantees và Footer (như đã thiết lập trong _Layout.cshtml)
    ViewData["HideHeaderIcons"] = true;
}

<section class="login-page-section py-5">
    <div class="container login-container">

        <div class="login-image-side d-none d-md-block">
            <img src="~/images/signup_illustration.jpg" alt="Shopping Illustration" class="illustration-image" />
        </div>

        <div class="login-form-side">
            <h2 class="form-title">Log in to Exclusive</h2>
            <p class="form-subtitle">Enter your details below</p>

            <form asp-controller="Account" asp-action="Login" method="post" class="login-form">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <input asp-for="EmailOrPhone" class="form-control" placeholder="Email or Phone Number" />
                    <span asp-validation-for="EmailOrPhone" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <button type="submit" class="btn btn-primary btn-log-in">
                        Log In
                    </button>
                    <a href="#" class="forgot-password-link">Forget Password?</a>
                </div>

            </form>

            <div class="create-account-link-wrapper mt-4 text-center">
                Don't have an account? <a asp-controller="SignUp" asp-action="Index" class="signup-link">Create Account</a>
            </div>
        </div>
    </div>
</section>

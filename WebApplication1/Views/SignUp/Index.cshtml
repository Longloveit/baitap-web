@{
    ViewData["Title"] = "Create an account";
    ViewData["HideHeaderIcons"] = true;
    }

<section class="signup-page-section">
    <div class="container signup-container">

        <div class="signup-image-side">
            <img src="~/images/signup_illustration.jpg" alt="Shopping Illustration" class="illustration-image" />
        </div>

        <div class="signup-form-side ">
            <div class="signup-form-inner">
                <h2 class="form-title">Create an account</h2>
                <p class="form-subtitle">Enter your details below</p>

                <form class="signup-form">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Name" required />
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Email or Phone Number" required />
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" required />
                    </div>

                    <button type="submit" class="btn btn-create-account">Create Account</button>

                    <button type="button" class="btn btn-google">
                        <i class="fab fa-google google-icon"></i>
                        Sign up with Google
                    </button>
                </form>

                <div class="login-link-wrapper">
                    Already have account? <a href="/SignUp/Login" class="login-link">Log in</a>
                </div>
            </div>
        </div>

    </div>
</section>

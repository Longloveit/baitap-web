
@{
    ViewData["Title"] = "Home";

}

<div class="row home-hero mt-4">
    <!-- MENU CATEGORY BÊN TRÁI -->
    <div class="col-lg-3 mb-3 mb-lg-0">
        <ul class="hero-category-list">
            <li><a href="#">Woman’s Fashion <i class="bi bi-chevron-right"></i></a></li>
            <li><a href="#">Men’s Fashion <i class="bi bi-chevron-right"></i></a></li>
            <li><a href="#">Electronics</a></li>
            <li><a href="#">Home &amp; Lifestyle</a></li>
            <li><a href="#">Medicine</a></li>
            <li><a href="#">Sports &amp; Outdoor</a></li>
            <li><a href="#">Baby’s &amp; Toys</a></li>
            <li><a href="#">Groceries &amp; Pets</a></li>
            <li><a href="#">Health &amp; Beauty</a></li>
        </ul>
    </div>


    <!-- BANNER IPHONE BÊN PHẢI -->
    <div class="col-lg-9">
        <div class="hero-banner-card">
            <div class="hero-banner-text">
                <div class="hero-banner-brand mb-3">
                    <i class="bi bi-apple"></i>
                    <span>iPhone 14 Series</span>
                </div>

                <h2 class="hero-banner-title mb-3">
                    Up to 10%<br />
                    off Voucher
                </h2>

                <a href="#" class="hero-shop-link">
                    Shop Now
                    <span class="hero-shop-arrow">→</span>
                </a>
            </div>

            <div class="hero-banner-image">
                <!-- đổi ảnh theo project của bạn -->
                <img src="~/images/iphone-hero.jpg" alt="iPhone 14" />
            </div>

            <!-- DOT SLIDER -->
            <div class="hero-dots">
                <span class="hero-dot"></span>
                <span class="hero-dot"></span>
                <span class="hero-dot active"></span>
                <span class="hero-dot"></span>
                <span class="hero-dot"></span>
            </div>
        </div>
    </div>
</div>



@{
    ViewBag.Title = "My Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HideHeaderIcons"] = true;
}
<div class="account-page container">

    <!-- BREADCRUMB -->
    <div class="account-breadcrumb">
        <a href="/">Home</a>
        <span class="mx-1">/</span>
        <span class="current">My Account</span>
    </div>

    <div class="row">
        <!-- SIDEBAR -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="account-sidebar">
                <p class="sidebar-title">Manage My Account</p>
                <ul class="sidebar-menu">
                    <li><a href="#">My Profile</a></li>
                    <li><a href="#">Address Book</a></li>
                    <li><a href="#">My Payment Options</a></li>
                </ul>

                <p class="sidebar-title">My Orders</p>
                <ul class="sidebar-menu">
                    <li><a href="#">My Returns</a></li>
                    <li><a href="#">My Cancellations</a></li>
                </ul>

                <p class="sidebar-title">My Wishlist</p>
            </div>
        </div>

        <!-- MAIN CONTENT -->
        <div class="col-lg-9 col-md-8">
            <div class="account-card">
                <div class="account-card-header d-flex justify-content-between align-items-center">
                    <h5>Edit Your Profile</h5>
                    <div class="welcome-text">
                        Welcome! <span class="name">Md Rimel</span>
                    </div>
                </div>

                <form method="post">
                    <!-- First + Last name -->
                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="profile-label">First Name</label>
                            <input type="text" class="form-control profile-input" name="FirstName" value="Md" />
                        </div>
                        <div class="col-md-6">
                            <label class="profile-label">Last Name</label>
                            <input type="text" class="form-control profile-input" name="LastName" value="Rimel" />
                        </div>
                    </div>

                    <!-- Email + Address -->
                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="profile-label">Email</label>
                            <input type="email" class="form-control profile-input" name="Email" value="rimel111@gmail.com" />
                        </div>
                        <div class="col-md-6">
                            <label class="profile-label">Address</label>
                            <input type="text" class="form-control profile-input" name="Address" value="Kingston, 5236, United State" />
                        </div>
                    </div>

                    <!-- Password section title -->
                    <div class="mb-2">
                        <span class="section-title">Password Changes</span>
                    </div>

                    <!-- Password fields -->
                    <div class="mb-3">
                        <label class="profile-label">Current Password</label>
                        <input type="password" class="form-control profile-input" name="CurrentPassword" />
                    </div>

                    <div class="mb-3">
                        <label class="profile-label">New Password</label>
                        <input type="password" class="form-control profile-input" name="NewPassword" />
                    </div>

                    <div class="mb-4">
                        <label class="profile-label">Confirm New Password</label>
                        <input type="password" class="form-control profile-input" name="ConfirmNewPassword" />
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn-account-cancel">Cancel</button>
                        <button type="submit" class="btn-account-save">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section BodyClass {
    <script>
        document.body.classList.add('page-signup');
    </script>
}
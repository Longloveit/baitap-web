@{
    ViewBag.Title = "Wishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HideHeaderIcons"] = true;
}

<div class="wishlist-page">

    <!-- Section Wishlist -->
    <div class="d-flex justify-content-between align-items-center mb-3 wishlist-header">
        <h5 class="section-title">Wishlist (4)</h5>
        <button class="move-btn">Move All To Bag</button>
    </div>

    <div class="row g-3 mb-5">

        <!-- Product 1 -->
        <div class="col-6 col-md-3">
            <div class="product-card">
                <span class="tag-sale">-35%</span>
                <div class="product-actions">
                    <i class="fa fa-xmark"></i>
                </div>

                <div class="product-image-wrapper">
                    <img src="/images/gucci_duffle_bag.png" alt="Gucci duffle bag" />
                </div>

                <p class="product-name">Gucci duffle bag</p>
                <div class="product-price-row">
                    <span class="product-price">$960</span>
                    <span class="product-old-price">$1200</span>
                </div>

                <button class="btn-add-cart">Add to Cart</button>
            </div>
        </div>

        <!-- Product 2 -->
        <div class="col-6 col-md-3">
            <div class="product-card">
                <span class="tag-sale">-6%</span>
                <div class="product-actions">
                    <i class="fa fa-xmark"></i>
                </div>

                <div class="product-image-wrapper">
                    <img src="/images/rgb_cpu_cooler.png" alt="RGB liquid CPU Cooler" />
                </div>

                <p class="product-name">RGB liquid CPU Cooler</p>
                <div class="product-price-row">
                    <span class="product-price">$160</span>
                    <span class="product-old-price">$170</span>
                </div>

                <button class="btn-add-cart">Add to Cart</button>
            </div>
        </div>

        <!-- Product 3 -->
        <div class="col-6 col-md-3">
            <div class="product-card">
                <div class="product-actions">
                    <i class="fa fa-xmark"></i>
                </div>

                <div class="product-image-wrapper">
                    <img src="/images/gamepad.png" alt="GP11 Shooter USB Gamepad" />
                </div>

                <p class="product-name">GP11 Shooter USB Gamepad</p>
                <div class="product-price-row">
                    <span class="product-price">$50</span>
                    <span class="product-old-price">$60</span>
                </div>

                <button class="btn-add-cart">Add to Cart</button>
            </div>
        </div>

        <!-- Product 4 -->
        <div class="col-6 col-md-3">
            <div class="product-card">
                <div class="product-actions">
                    <i class="fa fa-xmark"></i>
                </div>

                <div class="product-image-wrapper">
                    <img src="/images/satin_jacket.png" alt="Quilted Satin Jacket" />
                </div>

                <p class="product-name">Quilted Satin Jacket</p>
                <div class="product-price-row">
                    <span class="product-price">$750</span>
                </div>

                <button class="btn-add-cart">Add to Cart</button>
            </div>
        </div>
    </div>

    <!-- Section Just For You -->
    <div class="d-flex justify-content-between align-items-center mb-3 just-for-you-header">
        <div class="d-flex align-items-center gap-2">
            <span class="section-bar"></span>
            <h5 class="section-title mb-0">Just For You</h5>
        </div>
        <a class="btn-see-all">See All</a>
    </div>

    <div class="row g-3">

        <!-- Product 5 -->
        <div class="col-6 col-md-3">
            <div class="product-card">
                <span class="tag-sale">-30%</span>
                <div class="product-actions">
                    <i class="fa fa-heart"></i>
                </div>

                <div class="product-image-wrapper">
                    <img src="/images/asus_laptop.png" alt="ASUS FHD Gaming Laptop" />
                </div>

                <p class="product-name">ASUS FHD Gaming Laptop</p>

                <div class="product-price-row">
                    <span class="product-price">$960</span>
                    <span class="product-old-price">$1160</span>
                </div>

                <div class="product-rating">
                    <span class="rating-stars">★★★★★</span>
                    <span class="rating-count">(65)</span>
                </div>

                <button class="btn-add-cart">Add to Cart</button>
            </div>
        </div>

        <!-- Product 6 -->
        <div class="col-6 col-md-3">
            <div class="product-card">
                <div class="product-actions">
                    <i class="fa fa-heart"></i>
                </div>

                <div class="product-image-wrapper">
                    <img src="/images/monitor.png" alt="IPS LCD Gaming Monitor" />
                </div>

                <p class="product-name">IPS LCD Gaming Monitor</p>

                <div class="product-price-row">
                    <span class="product-price">$160</span>
                    <span class="product-old-price">$170</span>
                </div>

                <div class="product-rating">
                    <span class="rating-stars">★★★★★</span>
                    <span class="rating-count">(20)</span>
                </div>

                <button class="btn-add-cart">Add to Cart</button>
            </div>
        </div>

        <!-- Product 7 -->
        <div class="col-6 col-md-3">
            <div class="product-card">
                <span class="tag-new">NEW</span>
                <div class="product-actions">
                    <i class="fa fa-heart"></i>
                </div>

                <div class="product-image-wrapper">
                    <img src="/images/g92.png" alt="HAVIT HV-G92 Gamepad" />
                </div>

                <p class="product-name">HAVIT HV-G92 Gamepad</p>

                <div class="product-price-row">
                    <span class="product-price">$560</span>
                    <span class="product-old-price">$600</span>
                </div>

                <div class="product-rating">
                    <span class="rating-stars">★★★★☆</span>
                    <span class="rating-count">(55)</span>
                </div>

                <button class="btn-add-cart">Add to Cart</button>
            </div>
        </div>

        <!-- Product 8 -->
        <div class="col-6 col-md-3">
            <div class="product-card">
                <div class="product-actions">
                    <i class="fa fa-heart"></i>
                </div>

                <div class="product-image-wrapper">
                    <img src="/images/ak900.png" alt="AK-900 Wired Keyboard" />
                </div>

                <p class="product-name">AK-900 Wired Keyboard</p>

                <div class="product-price-row">
                    <span class="product-price">$200</span>
                    <span class="product-old-price">$250</span>
                </div>

                <div class="product-rating">
                    <span class="rating-stars">★★★★☆</span>
                    <span class="rating-count">(65)</span>
                </div>

                <button class="btn-add-cart">Add to Cart</button>
            </div>
        </div>
    </div>
</div>

@section BodyClass {
    <script>
        document.body.classList.add('page-wishlist');
    </script>
}
